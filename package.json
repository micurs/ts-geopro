{
  "version": "0.0.3",
  "private": true,
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^24.10.0",
    "turbo": "^2.6.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "scripts": {
    "dev:c": "turbo run dev:c",
    "dev:p": "turbo run dev:p",
    "dev:q": "turbo run dev:q",
    "dev:gsc": "turbo run dev --filter=@micurs/ts-geosolid-canvas",
    "build": "turbo run build",
    "build:gsc": "turbo run build --filter=@micurs/ts-geosolid-canvas",
    "test": "turbo run test",
    "cli-demos": "deno apps/cli-demos/point-vector.ts",
    "version-update": "deno --allow-read --allow-write --allow-env scripts/update-versions.ts patch",
    "lint": "turbo run lint",
    "install-hooks": "sh scripts/install-hooks.sh",
    "postinstall": "pnpm run install-hooks"
  },
  "packageManager": "pnpm@10.11.1"
}
